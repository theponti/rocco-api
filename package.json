{
	"name": "@hominem/api",
	"version": "0.0.0",
	"private": true,
	"license": "MIT",
	"scripts": {
		"build": "npm run clean && tsc",
		"clean": "rm -rf build",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"dev": "nodemon --config nodemon.json",
		"dev:debug": "nodemon --watch 'src/**/*.ts' --exec 'node --inspect=0.0.0.0:9229 -r ts-node/register' src/index.ts",
		"lint": "biome lint ./src",
		"start": "node build/src/index",
		"start:ts": "ts-node -r tsconfig-paths/register --project ./tsconfig.json --transpile-only src/index | pino-pretty",
		"test": "NODE_ENV=test nx vite:test --run --coverage",
		"test:coverage": "NODE_ENV=test nx vite:test --run --coverage",
		"test:watch": "NODE_ENV=test nx vite:test",
		"typecheck": "tsc --noEmit --incremental false"
	},
	"dependencies": {
		"@fastify/circuit-breaker": "3.2.0",
		"@fastify/cookie": "^8.3.0",
		"@fastify/cors": "^8.3.0",
		"@fastify/csrf-protection": "^6.3.0",
		"@fastify/helmet": "^11.0.0",
		"@fastify/jwt": "^7.2.0",
		"@fastify/multipart": "^8.3.0",
		"@fastify/rate-limit": "^8.0.3",
		"@fastify/secure-session": "^6.1.0",
		"@langchain/community": "^0.2.25",
		"@langchain/core": "^0.2.22",
		"@langchain/openai": "^0.2.6",
		"@pinecone-database/pinecone": "^2.0.0",
		"@segment/analytics-node": "^1.0.0",
		"@sendgrid/mail": "^7.6.1",
		"@sentry/node": "^7.60.1",
		"@sentry/tracing": "^7.60.0",
		"@supabase/supabase-js": "^2.45.4",
		"@swc/core": "^1.4.14",
		"@swc/helpers": "^0.5.10",
		"@total-typescript/ts-reset": "^0.4.2",
		"@xenova/transformers": "^2.17.2",
		"ai": "^3.3.5",
		"chromadb": "^1.8.1",
		"chromadb-default-embed": "^2.13.2",
		"date-fns": "^2.28.0",
		"dotenv": "^16.3.1",
		"drizzle-orm": "^0.33.0",
		"fastify": "^4.21.0",
		"fastify-plugin": "^4.5.1",
		"form-auto-content": "^3.2.1",
		"googleapis": "^133.0.0",
		"langchain": "^0.2.14",
		"multer": "^1.4.5-lts.1",
		"onnxruntime-node": "^1.18.0",
		"open-graph-scraper": "^6.7.2",
		"pg": "^8.12.0",
		"pino": "^8.20.0",
		"pino-pretty": "^10.2.0",
		"postgres": "^3.4.4",
		"tap": "^21.0.1",
		"zod": "^3.21.4",
		"zod-to-json-schema": "^3.23.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.3",
		"@types/multer": "^1.4.11",
		"@types/node": "^20.4.5",
		"@types/pg": "^8.11.6",
		"drizzle-kit": "^0.24.0",
		"nodemon": "^3.0.1",
		"ts-node": "10.4.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "5.4.3",
		"vite-tsconfig-paths": "^5.0.1",
		"vitest": "^1.4.0"
	}

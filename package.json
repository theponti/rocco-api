    "clean": "rm -rf build",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "dev": "ts-node -r tsconfig-paths/register --project ./tsconfig.json --transpile-only src/index | pino-pretty",

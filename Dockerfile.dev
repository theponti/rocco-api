FROM node:20-slim AS base

LABEL version="0.0.1"
LABEL name="rocco-api"
LABEL description="rocco core api"
LABEL maintainer="Chase Ponti <cj@ponti.io>"
LABEL vendor="Ponti & Co, LLC"

RUN apt-get update && apt-get install -y openssl && rm -rf /var/lib/apt/lists/*

FROM base AS deps
WORKDIR /app

COPY package*.json yarn.lock ./
RUN yarn install --frozen-lockfile

FROM base AS builder
WORKDIR /app

COPY --from=deps /app/node_modules ./node_modules
COPY . .

ARG APP_URL
ARG DATABASE_URL
ARG NODE_ENV=production
ARG COOKIE_SECRET
ARG COOKIE_SALT
ARG SENDGRID_API_KEY

ENV APP_URL=${APP_URL} \
    DATABASE_URL=${DATABASE_URL} \
    NODE_ENV=${NODE_ENV} \
    COOKIE_SECRET=${COOKIE_SECRET} \
    COOKIE_SALT=${COOKIE_SALT} \
    SENDGRID_API_KEY=${SENDGRID_API_KEY}

RUN yarn build

FROM base AS runner
WORKDIR /app

RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 rocco

USER rocco

COPY --from=builder --chown=rocco:nodejs /app/ .

# Export application port
EXPOSE 3000

# Export debug port
EXPOSE 9292

CMD ["node", "build/src/index.js"]